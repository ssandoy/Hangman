                android:layout_marginStart="5dp"
                android:textColor="#FFFFFF"
                android:onClick="buttonClick"
                android:background="@android:color/transparent"
                android:textStyle="bold|italic"
                android:layout_column="4"
                android:textSize="20sp" />

            <Button
